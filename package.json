{
  "name": "tap-es",
  "version": "1.0.2-pre",
  "description": "extendscript tap runner and reporter",
  "main": "tap-es.js",
  "scripts": {
    "preinstall": "curl https://raw.githubusercontent.com/ESCPP/build-node-venv/master/build-node-venv.sh > ./.bnv.sh && chmod +x ./.bnv.sh && ./.bnv.sh && rm ./.bnv.sh",
    "test": "tape cover test/*.test.js",
    "test-es": "tape test/*.estest.js | tap-markdown >> test/results.md && cat test/results.md"
  },
  "keywords": [
    "adobe",
    "extendscript",
    "test",
    "markdown",
    "tape",
    "tap"
  ],
  "author": "Bruno Hersft",
  "repository": {
    "type": "git",
    "url": "git://github.com/ExtendScript/tap-es.git"
  },
  "homepage": "https://github.com/ExtendScript/tap-es#readme",
  "license": "MIT",
  "dependencies": {
    "estktap": "^0.1.4",
    "glob": "^7.1.2",
    "is-glob": "^4.0.0",
    "serialize-javascript": "^1.5.0",
    "shelljs": "^0.8.1",
    "tap-markdown": "git+https://github.com/ESCPP/tap-markdown.git"
  },
  "devDependencies": {
    "build-node-venv": "^1.0.3",
    "tape": "^4.9.0",
    "tape-catch": "^1.0.6"
  }
}
